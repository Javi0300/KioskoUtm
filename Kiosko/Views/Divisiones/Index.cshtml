@model IEnumerable<Kiosko.Models.Divisione>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<h1>GESTIONAR DIVISIONES</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">AGREGAR DIVISION</a>
    <a class="btn btn-outline-primary" asp-action="Index" asp-controller="Fotosdivisions">AGREGAR FOTOS</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                DIVISION
            </th>
            <th>
                COORDINADOR
            </th>
            <th>
                DESCRIPCION
            </th>
            <th>
                PLAN DE ESTUDIO
            </th>
            <th>
                VIDEO
            </th>
            <th>
                FOTO
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombredivision)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coordinador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripciondivision)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Planestudio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Videodivision)
                </td>
                <td>
                    <img src="~/img/@Html.DisplayFor(modelItem => item.Fotodivision)" width="40" height="40" />
                    
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Iddivisiones">EDITAR</a> |
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Iddivisiones">DETALLES</a> |
                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Iddivisiones">BORRAR</a>
                </td>
            </tr>
        }
    </tbody>
</table>
