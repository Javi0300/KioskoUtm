@{
    @model IEnumerable<Kiosko.Models.Divisione>
}
<main id="main">



    <!-- ======= Cta1 Section ======= -->
    <section id="cta1" class="cta">
        <div class="container" data-aos="zoom-in">

            <div class="row">
                <div class="col-lg-9 text-center text-lg-start">
                    <h3>Conoce las divisiones que la UNIVERSIDAD TECNOLOGICA METROPOLITANA tiene</h3>
                    <p> Cada division de la UTM tiene un gran desarrollo en lo que a sus proyectos se refiere, esto es gracias a los docentes que estan mas que calificados para instruir a sus alumnos de sus respectivas areas.</p>
                </div>
                <div class="col-lg-3 cta-btn-container text-center">
                    <a class="cta-btn align-middle"  asp-area="" asp-controller="Home" asp-action="gestionDivision">VER</a>
                </div>
            </div>

        </div>
    </section><!-- End Cta Section -->



    <footer id="footer">

        <div class="footer-newsletter">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <h4>Busca cualquier DIVISION</h4>
                        <p>busca el nombre del proyecto o escribe el la division para ver todos sus proyectos</p>
                        <form action="" method="post">
                            <input type="email" name="email"><input type="submit" value="buscar">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </footer>





    <!-- ======= Why Us Section ======= -->
    <section id="why-us" class="why-us section-bg">



        <div class="container-fluid" data-aos="fade-up">






            @foreach (var item in Model)
            {


            <div class="row">

                <div class="col-lg-5 d-flex align-items-center" data-aos="fade-right" data-aos-delay="100">
                    <img src="~/img/@Html.DisplayFor(modelItem => item.Fotodivision)" class="img-fluid" />
                    
                </div>
                <div class="col-lg-7 d-flex flex-column justify-content-center align-items-stretch  order-2 order-lg-1">
                    <div class="content">
                        <h3><strong>@Html.DisplayFor(modelItem => item.Nombredivision)</strong></h3>
                        <p>
                            @Html.DisplayFor(modelItem => item.Descripciondivision)
                        </p>
                    </div>

                    <div class="accordion-list">
                        <ul>
                            <li>
                                <a class="collapse" asp-area="" asp-controller="Home" asp-action="infoDivision" asp-route-id="@item.Iddivisiones"> conoce mas de la division <i class="bx bx-chevron-down icon-show"></i><i></i></a>
                                <div id="accordion-list-5">
                                  
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="accordion-list">
                        <ul>
                            <li>
                                <a class="collapse" asp-area="" asp-controller="Home" asp-action="proyectosdedivision" asp-route-id="@item.Iddivisiones"> ver los proyectos del area de: @Html.DisplayFor(modelItem => item.Nombredivision)  <i class="bx bx-chevron-down icon-show"></i><i></i></a>
                                <div id="accordion-list-6">
                                  
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            }






        </div>








    </section>






























    <section id="cliens1" class="cliens section-bg">
        <div class="container">

            <div class="row" data-aos="zoom-in">

                <div class="col">
                    <h1>NO OLVIDES VISITAR LOS PROYECTOS</h1>
                </div>
            </div>

        </div>

    </section>




</main>